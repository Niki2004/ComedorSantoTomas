    <!-- Sección Principal de Contacto -->
    <section id="contact-main" style="padding: 80px 0; background-color: #f8f9fa;">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="block text-center">
                        <h1 class="heading wow fadeInUp" data-wow-duration="400ms" data-wow-delay="300ms">
                            <span>Contacto</span>
                        </h1>
                        <p class="wow fadeInUp" data-wow-duration="300ms" data-wow-delay="400ms" style="font-size: 18px; color: #7f8c8d; margin-bottom: 50px;">
                            ¿Tienes preguntas o comentarios? Estamos aquí para ayudarte
                        </p>
                        <hr style="border-color: #e67e22; width: 80px; border-width: 2px;">
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Información de Contacto y Formulario -->
    <section id="contact-content" style="padding: 80px 0; background-color: white;">
        <div class="container">
            <div class="row">
                <!-- Información de Contacto -->
                <div class="col-md-6">
                    <div class="wow fadeInLeft" data-wow-duration="500ms" data-wow-delay="300ms">
                        <h2 style="color: #2c3e50; margin-bottom: 30px;">
                            <span style="color: #e67e22;">Información</span> de Contacto
                        </h2>
                        <p style="color: #7f8c8d; line-height: 1.8; margin-bottom: 40px;">
                            Estamos ubicados en la institución educativa de Santo Tomás, Heredia.
                            Contáctanos para cualquier consulta sobre nuestros servicios, menús o horarios.
                        </p>

                        <!-- Dirección -->
                        <div style="background-color: #f8f9fa; padding: 25px; border-radius: 10px; margin-bottom: 30px; border-left: 4px solid #e67e22;">
                            <h5 style="color: #2c3e50; margin-bottom: 20px;">
                                <i class="fas fa-map-marker-alt" style="color: #e67e22; margin-right: 15px; font-size: 1.2rem;"></i>
                                Dirección
                            </h5>
                            <address style="color: #7f8c8d; line-height: 1.6; margin: 0;">
                                Escuela de Santo Tomás<br />
                                Santo Tomás, Heredia<br />
                                Costa Rica<br />
                            </address>
                        </div>

                        <!-- Teléfono -->
                        <div style="background-color: #f8f9fa; padding: 25px; border-radius: 10px; margin-bottom: 30px; border-left: 4px solid #e67e22;">
                            <h5 style="color: #2c3e50; margin-bottom: 20px;">
                                <i class="fas fa-phone" style="color: #e67e22; margin-right: 15px; font-size: 1.2rem;"></i>
                                Teléfono
                            </h5>
                            <p style="color: #7f8c8d; margin: 0;">
                                <abbr title="Teléfono">Tel:</abbr> <strong>2244 8403</strong>
                            </p>
                        </div>

                        <!-- Correos -->
                        <div style="background-color: #f8f9fa; padding: 25px; border-radius: 10px; margin-bottom: 30px; border-left: 4px solid #e67e22;">
                            <h5 style="color: #2c3e50; margin-bottom: 20px;">
                                <i class="fas fa-envelope" style="color: #e67e22; margin-right: 15px; font-size: 1.2rem;"></i>
                                Correo Electrónico
                            </h5>
                            <p style="margin-bottom: 10px;">
                                <strong style="color: #2c3e50;">Información General:</strong><br>
                                <a href="mailto:esc.santotomas.heredia@mep.go.cr" style="color: #e67e22; text-decoration: none; font-weight: 500;">
                                    esc.santotomas.heredia@mep.go.cr
                                </a>
                            </p>
                            <p style="margin-bottom: 10px;">
                                <strong style="color: #2c3e50;">Comedor:</strong><br>
                                <a href="mailto:comedor.santotomas@mep.go.cr" style="color: #e67e22; text-decoration: none; font-weight: 500;">
                                    comedor.santotomas@mep.go.cr
                                </a>
                            </p>
                            <p style="margin: 0;">
                                <strong style="color: #2c3e50;">Sugerencias:</strong><br>
                                <a href="mailto:sugerencias.comedor@mep.go.cr" style="color: #e67e22; text-decoration: none; font-weight: 500;">
                                    sugerencias.comedor@mep.go.cr
                                </a>
                            </p>
                        </div>

                        <!-- Horarios -->
                        <div style="background-color: #f8f9fa; padding: 25px; border-radius: 10px; border-left: 4px solid #e67e22;">
                            <h5 style="color: #2c3e50; margin-bottom: 20px;">
                                <i class="fas fa-clock" style="color: #e67e22; margin-right: 15px; font-size: 1.2rem;"></i>
                                Horarios de Atención
                            </h5>
                            <div style="color: #7f8c8d;">
                                <p style="margin-bottom: 8px;"><strong>Lunes a Viernes:</strong> 7:00 AM - 3:00 PM</p>
                                <p style="margin-bottom: 8px;"><strong>Almuerzo:</strong> 11:30 AM - 1:30 PM</p>
                                <p style="margin-bottom: 8px;"><strong>Merienda:</strong> 2:00 PM - 3:00 PM</p>
                                <p style="margin: 0; color: #e67e22; font-weight: 500;"><strong>Sábados y Domingos:</strong> Cerrado</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Formulario de Contacto -->
                <div class="col-md-6">
                    <div class="wow fadeInRight" data-wow-duration="500ms" data-wow-delay="400ms"
                         style="background: #f8f9fa; padding: 40px; border-radius: 15px; box-shadow: 0 10px 30px rgba(0,0,0,0.1);">
                        <h3 style="color: #2c3e50; margin-bottom: 30px; text-align: center;">
                            <i class="fas fa-paper-plane" style="color: #e67e22; margin-right: 10px;"></i>
                            Envíanos un Mensaje
                        </h3>

                        <form action="mailto:esc.santotomas.heredia@mep.go.cr" method="post" enctype="text/plain">
                            <div class="form-group mb-4">
                                <label for="nombre" style="color: #2c3e50; font-weight: bold; margin-bottom: 8px; display: block;">
                                    <i class="fas fa-user" style="color: #e67e22; margin-right: 8px;"></i>Nombre Completo
                                </label>
                                <input type="text" id="nombre" name="Nombre" required
                                       class="form-control form-control-lg" placeholder="Ingresa tu nombre completo"
                                       style="border-radius: 25px; border: 2px solid #e67e22; padding: 15px 20px; background: white;">
                            </div>

                            <div class="form-group mb-4">
                                <label for="email" style="color: #2c3e50; font-weight: bold; margin-bottom: 8px; display: block;">
                                    <i class="fas fa-envelope" style="color: #e67e22; margin-right: 8px;"></i>Correo Electrónico
                                </label>
                                <input type="email" id="email" name="Email" required
                                       class="form-control form-control-lg" placeholder="tu.email@ejemplo.com"
                                       style="border-radius: 25px; border: 2px solid #e67e22; padding: 15px 20px; background: white;">
                            </div>

                            <div class="form-group mb-4">
                                <label for="telefono" style="color: #2c3e50; font-weight: bold; margin-bottom: 8px; display: block;">
                                    <i class="fas fa-phone" style="color: #e67e22; margin-right: 8px;"></i>Teléfono (Opcional)
                                </label>
                                <input type="tel" id="telefono" name="Telefono"
                                       class="form-control form-control-lg" placeholder="2244-8403"
                                       style="border-radius: 25px; border: 2px solid #e67e22; padding: 15px 20px; background: white;">
                            </div>

                            <div class="form-group mb-4">
                                <label for="asunto" style="color: #2c3e50; font-weight: bold; margin-bottom: 8px; display: block;">
                                    <i class="fas fa-tag" style="color: #e67e22; margin-right: 8px;"></i>Asunto
                                </label>
                                <select id="asunto" name="Asunto" required
                                        class="form-control form-control-lg"
                                        style="border-radius: 25px; border: 2px solid #e67e22; padding: 15px 20px; background: white;">
                                    <option value="">Selecciona un asunto...</option>
                                    <option value="Consulta sobre menús">Consulta sobre menús</option>
                                    <option value="Información de horarios">Información de horarios</option>
                                    <option value="Sugerencias">Sugerencias</option>
                                    <option value="Quejas">Quejas</option>
                                    <option value="Solicitud especial">Solicitud especial</option>
                                    <option value="Otro">Otro</option>
                                </select>
                            </div>

                            <div class="form-group mb-4">
                                <label for="mensaje" style="color: #2c3e50; font-weight: bold; margin-bottom: 8px; display: block;">
                                    <i class="fas fa-comment" style="color: #e67e22; margin-right: 8px;"></i>Mensaje
                                </label>
                                <textarea id="mensaje" name="Mensaje" rows="6" required
                                          class="form-control" placeholder="Escribe tu mensaje aquí..."
                                          style="border-radius: 15px; border: 2px solid #e67e22; padding: 15px 20px; background: white; resize: vertical;"></textarea>
                            </div>

                            <div class="form-group text-center">
                                <button type="submit" class="btn btn-lg"
                                        style="background-color: #e67e22; color: white; border: none; border-radius: 25px; padding: 12px 40px; font-weight: bold; transition: all 0.3s ease; box-shadow: 0 4px 15px rgba(230, 126, 34, 0.3);"
                                        onmouseover="this.style.backgroundColor='#d35400'; this.style.transform='translateY(-2px)'; this.style.boxShadow='0 6px 20px rgba(230, 126, 34, 0.4)'"
                                        onmouseout="this.style.backgroundColor='#e67e22'; this.style.transform='translateY(0)'; this.style.boxShadow='0 4px 15px rgba(230, 126, 34, 0.3)'">
                                    <i class="fas fa-paper-plane" style="margin-right: 8px;"></i>
                                    Enviar Mensaje
                                </button>
                            </div>
                        </form>

                        <div class="text-center mt-4" style="padding-top: 20px; border-top: 1px solid #e67e22;">
                            <small style="color: #7f8c8d;">
                                <i class="fas fa-info-circle" style="color: #e67e22; margin-right: 5px;"></i>
                                Te responderemos lo antes posible
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Sección de Emergencia -->
    <section id="emergency" style="padding: 60px 0; background-color: #2c3e50; color: white;">
        <div class="container">
            <div class="row text-center">
                <div class="col-md-4">
                    <div class="wow fadeInUp" data-wow-duration="300ms" data-wow-delay="300ms">
                        <i class="fas fa-exclamation-triangle" style="font-size: 3rem; color: #e67e22; margin-bottom: 20px;"></i>
                        <h4>Emergencias</h4>
                        <p>En caso de emergencia durante el horario escolar, contacta directamente a la dirección de la escuela</p>
                        <strong style="color: #e67e22;">2244 8403</strong>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="wow fadeInUp" data-wow-duration="300ms" data-wow-delay="400ms">
                        <i class="fas fa-question-circle" style="font-size: 3rem; color: #e67e22; margin-bottom: 20px;"></i>
                        <h4>Preguntas Frecuentes</h4>
                        <p>Consulta nuestros menús del día, precios especiales y opciones para dietas especiales</p>
                        <a href="#" style="color: #e67e22; font-weight: bold;">Ver FAQ</a>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="wow fadeInUp" data-wow-duration="300ms" data-wow-delay="500ms">
                        <i class="fas fa-heart" style="font-size: 3rem; color: #e67e22; margin-bottom: 20px;"></i>
                        <h4>Sugerencias</h4>
                        <p>Tus opiniones son importantes para nosotros. Ayúdanos a mejorar nuestro servicio</p>
                        <a href="mailto:sugerencias.comedor@mep.go.cr" style="color: #e67e22; font-weight: bold;">Enviar Sugerencia</a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/wow/1.1.2/wow.min.js"></script>
