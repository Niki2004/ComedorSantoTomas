    <!-- Historia y Misión -->
    <section id="our-story" style="padding: 80px 0; background-color: white;">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <div class="wow fadeInLeft" data-wow-duration="500ms" data-wow-delay="300ms">
                        <img class="img-fluid rounded" src="~/Imagen/escuela.jpeg" alt="Escuela Santo Tomás"
