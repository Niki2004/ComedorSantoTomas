@model TCU_Comedor.Models.RegisterViewModel

<!DOCTYPE html>
<html class="no-js">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Registro - Comedor Institucional</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">

    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/css/main.css" rel="stylesheet" />
    <link href="~/css/responsive.css" rel="stylesheet" />
</head>

<body>

    <section id="hero-area">
        <img class="img-responsive" src="~/Imagen/header.jpg" alt="" />
    </section>

    <nav id="navigation">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="block">
                        <nav class="navbar navbar-default">
                            <div class="container-fluid">
                                <div class="navbar-header">
                                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse"
                                            data-target="#bs-example-navbar-collapse-1">
                                        <span class="sr-only">Toggle navigation</span>
                                        <span class="icon-bar"></span>
                                        <span class="icon-bar"></span>
                                        <span class="icon-bar"></span>
                                    </button>
                                </div>

                                <nav class="navbar navbar-expand-lg">
                                    <div class="collapse navbar-collapse" id="navbarNav">
                                        <ul class="navbar-nav ms-auto">
                                            <li class="nav-item">
                                                <a class="nav-link active" href="@Url.Action("Index", "Home")">Inicio</a>
                                            </li>
                                            <li class="nav-item">
                                                <a class="nav-link" href="@Url.Action("About", "Home")">Sobre nosotros</a>
                                            </li>
                                            <li class="nav-item">
                                                <a class="nav-link" href="@Url.Action("Services", "Home")">Servivios</a>
                                            </li>
                                            <li class="nav-item">
                                                <a class="nav-link" href="@Url.Action("Contact", "Home")">Contacto</a>
                                            </li>
                                            <li class="nav-item">
                                                <a class="nav-link" href="@Url.Action("Register", "Account")">Registro</a>
                                            </li>
                                            <li class="nav-item">
                                                <a class="nav-link" href="@Url.Action("Login", "Account")">Inicio de sesión</a>
                                            </li>
                                            <li class="nav-item">
                                                <a class="nav-link" href='@Url.Action("Index", "Ajustes")'><i class="fas fa-cog"></i></a>
                                            </li>
                                        </ul>
                                    </div>
                                </nav>
                            </div>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </nav>

    <!-- Sección de Registro -->
    <section id="register-section" style="padding: 80px 0; background-color: #f8f9fa;">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-8">
                    <div class="block" style="background: white; padding: 40px; border-radius: 10px; box-shadow: 0 5px 15px rgba(0,0,0,0.1);">
                        <div class="text-center mb-4">
                            <h1 class="heading wow fadeInUp" data-wow-duration="400ms" data-wow-delay="300ms">
                                <span>Crear</span> Nueva <span>Cuenta</span>
                            </h1>
                            <p class="wow fadeInUp" data-wow-duration="300ms" data-wow-delay="400ms">
                                Únete a nuestro comedor institucional y disfruta de nuestros servicios
                            </p>
                            <hr style="border-color: #e67e22; width: 80px; border-width: 2px;">
                        </div>

                        <main aria-labelledby="title">
                            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { role = "form", @class = "wow fadeInUp", data_wow_duration = "500ms", data_wow_delay = "500ms" }))
                            {
                                @Html.AntiForgeryToken()

                                @Html.ValidationSummary("", new { @class = "text-danger alert alert-danger", role = "alert" })

                                <div class="form-group row mb-4">
                                    @Html.LabelFor(m => m.Email, new { @class = "col-md-3 col-form-label font-weight-bold" })
                                    <div class="col-md-9">
                                        @Html.TextBoxFor(m => m.Email, new
                                        {
                                            @class = "form-control form-control-lg",
                                            @placeholder = "Ingresa tu email",
                                            @style = "border-radius: 25px; border: 2px solid #e67e22; padding: 15px 20px;"
                                        })
                                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger small" })
                                    </div>
                                </div>

                                <div class="form-group row mb-4">
                                    @Html.LabelFor(m => m.Password, new { @class = "col-md-3 col-form-label font-weight-bold" })
                                    <div class="col-md-9">
                                        @Html.PasswordFor(m => m.Password, new
                                        {
                                            @class = "form-control form-control-lg",
                                            @placeholder = "Ingresa tu contraseña",
                                            @style = "border-radius: 25px; border: 2px solid #e67e22; padding: 15px 20px;"
                                        })
                                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger small" })
                                    </div>
                                </div>

                                <div class="form-group row mb-4">
                                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-3 col-form-label font-weight-bold" })
                                    <div class="col-md-9">
                                        @Html.PasswordFor(m => m.ConfirmPassword, new
                                        {
                                            @class = "form-control form-control-lg",
                                            @placeholder = "Confirma tu contraseña",
                                            @style = "border-radius: 25px; border: 2px solid #e67e22; padding: 15px 20px;"
                                        })
                                        @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger small" })
                                    </div>
                                </div>

                                <div class="form-group row mb-4">
                                    @Html.LabelFor(m => m.NombreCompleto, new { @class = "col-md-3 col-form-label font-weight-bold" })
                                    <div class="col-md-9">
                                        @Html.TextBoxFor(m => m.NombreCompleto, new
                                        {
                                            @class = "form-control form-control-lg",
                                            @placeholder = "Ingresa tu nombre completo",
                                            @style = "border-radius: 25px; border: 2px solid #e67e22; padding: 15px 20px;"
                                        })
                                        @Html.ValidationMessageFor(m => m.NombreCompleto, "", new { @class = "text-danger small" })
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <div class="col-md-12 text-center">
                                        <input type="submit" value="Crear Cuenta" class="btn btn-lg"
                                               style="background-color: #e67e22; color: white; border: none; border-radius: 25px; padding: 12px 40px; font-weight: bold; transition: all 0.3s ease; box-shadow: 0 4px 15px rgba(230, 126, 34, 0.3);"
                                               onmouseover="this.style.backgroundColor='#d35400'; this.style.transform='translateY(-2px)'; this.style.boxShadow='0 6px 20px rgba(230, 126, 34, 0.4)'"
                                               onmouseout="this.style.backgroundColor='#e67e22'; this.style.transform='translateY(0)'; this.style.boxShadow='0 4px 15px rgba(230, 126, 34, 0.3)'" />
                                    </div>
                                </div>

                                <div class="text-center mt-4">
                                    <p>
                                        ¿Ya tienes una cuenta?
                                        <a href="@Url.Action("Login", "Account")" style="color: #e67e22; font-weight: bold; text-decoration: none;">
                                            Inicia sesión aquí
                                        </a>
                                    </p>
                                </div>
                            }
                        </main>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Sección adicional de información -->
    <section id="about-register" style="padding: 60px 0; background-color: #2c3e50; color: white;">
        <div class="container">
            <div class="row">
                <div class="col-md-4 text-center mb-4">
                    <div class="wow fadeInUp" data-wow-duration="300ms" data-wow-delay="300ms">
                        <i class="fas fa-utensils" style="font-size: 3rem; color: #e67e22; margin-bottom: 20px;"></i>
                        <h4>Comida de Calidad</h4>
                        <p>Disfruta de platillos preparados con los mejores ingredientes</p>
                    </div>
                </div>
                <div class="col-md-4 text-center mb-4">
                    <div class="wow fadeInUp" data-wow-duration="300ms" data-wow-delay="400ms">
                        <i class="fas fa-clock" style="font-size: 3rem; color: #e67e22; margin-bottom: 20px;"></i>
                        <h4>Horarios Flexibles</h4>
                        <p>Servicio disponible en horarios ya determinados</p>
                    </div>
                </div>
                <div class="col-md-4 text-center mb-4">
                    <div class="wow fadeInUp" data-wow-duration="300ms" data-wow-delay="500ms">
                        <i class="fas fa-apple-alt" style="font-size: 3rem; color: #e67e22; margin-bottom: 20px;"></i>
                        <h4>Alimentos saludables</h4>
                        <p>Los mejores alimentos en las mejores manos</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/wow/1.1.2/wow.min.js"></script>
    <script>
        new WOW().init();
    </script>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
</body>

</html>