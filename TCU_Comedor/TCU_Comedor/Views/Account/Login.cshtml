@using TCU_Comedor.Models
@model LoginViewModel


<!DOCTYPE html>
<html class="no-js">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Iniciar Sesión - Comedor Institucional</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">

    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/css/main.css" rel="stylesheet" />
    <link href="~/css/responsive.css" rel="stylesheet" />
</head>

<body>

    <section id="hero-area">
        <img class="img-responsive" src="~/Imagen/header.jpg" alt="" />
    </section>

    <nav id="navigation">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="block">
                        <nav class="navbar navbar-default">
                            <div class="container-fluid">
                                <div class="navbar-header">
                                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse"
                                            data-target="#bs-example-navbar-collapse-1">
                                        <span class="sr-only">Toggle navigation</span>
                                        <span class="icon-bar"></span>
                                        <span class="icon-bar"></span>
                                        <span class="icon-bar"></span>
                                    </button>
                                </div>

                                <nav class="navbar navbar-expand-lg">
                                    <div class="collapse navbar-collapse" id="navbarNav">
                                        <ul class="navbar-nav ms-auto">
                                            <li class="nav-item">
                                                <a class="nav-link active" href="@Url.Action("Index", "Home")">Inicio</a>
                                            </li>
                                            <li class="nav-item">
                                                <a class="nav-link" href="@Url.Action("About", "Home")">Sobre nosotros</a>
                                            </li>
                                            <li class="nav-item">
                                                <a class="nav-link" href="@Url.Action("Services", "Home")">Servivios</a>
                                            </li>
                                            <li class="nav-item">
                                                <a class="nav-link" href="@Url.Action("Contact", "Home")">Contacto</a>
                                            </li>
                                            <li class="nav-item">
                                                <a class="nav-link" href="@Url.Action("Register", "Account")">Registro</a>
                                            </li>
                                            <li class="nav-item">
                                                <a class="nav-link" href="@Url.Action("Login", "Account")">Inicio de sesión</a>
                                            </li>
                                            @if (User.Identity.IsAuthenticated)
                                            {
                                                <li class="nav-item">
                                                    <a class="nav-link" href='@Url.Action("Index", "Ajustes")'>
                                                        <i class="fas fa-cog"></i>
                                                    </a>
                                                </li>
                                            }
                                        </ul>
                                    </div>
                                </nav>
                            </div>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </nav>

    <!-- Sección de Login -->
    <section id="login-section" style="padding: 80px 0; background-color: #f8f9fa;">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-10">
                    <div class="text-center mb-5">
                        <h1 class="heading wow fadeInUp" data-wow-duration="400ms" data-wow-delay="300ms">
                            <span>Iniciar</span> Sesión
                        </h1>
                        <p class="wow fadeInUp" data-wow-duration="300ms" data-wow-delay="400ms">
                            Accede a tu cuenta del comedor institucional
                        </p>
                        <hr style="border-color: #e67e22; width: 80px; border-width: 2px;">
                    </div>

                    <main aria-labelledby="title">
                        <div class="row">
                            <div >
                                <div class="block wow fadeInLeft" data-wow-duration="500ms" data-wow-delay="500ms"
                                     style="background: white; padding: 40px; border-radius: 10px; box-shadow: 0 5px 15px rgba(0,0,0,0.1); margin-bottom: 30px;">
                                    <section id="loginForm">
                                        <div class="text-center mb-4">
                                            <i class="fas fa-user-circle" style="font-size: 4rem; color: #e67e22; margin-bottom: 20px;"></i>
                                            <h4 style="color: #2c3e50; font-weight: bold;">Usa tu cuenta para iniciar sesión</h4>
                                        </div>

                                        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
                                        {
                                            @Html.AntiForgeryToken()

                                            @Html.ValidationSummary(true, "", new { @class = "text-danger alert alert-danger", role = "alert" })

                                            <div class="form-group row mb-4">
                                                @Html.LabelFor(m => m.Email, new { @class = "col-md-3 col-form-label font-weight-bold" })
                                                <div class="col-md-9">
                                                    @Html.TextBoxFor(m => m.Email, new
                                                    {
                                                        @class = "form-control form-control-lg",
                                                        @placeholder = "Ingresa tu email",
                                                        @style = "border-radius: 25px; border: 2px solid #e67e22; padding: 15px 20px; "
                                                    })
                                                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger small" })
                                                </div>
                                            </div>

                                            <div class="form-group row mb-4">
                                                @Html.LabelFor(m => m.Password, new { @class = "col-md-3 col-form-label font-weight-bold" })
                                                <div class="col-md-9">
                                                    @Html.PasswordFor(m => m.Password, new
                                                    {
                                                        @class = "form-control form-control-lg",
                                                        @placeholder = "Ingresa tu contraseña",
                                                        @style = "border-radius: 25px; border: 2px solid #e67e22; padding: 15px 20px;"
                                                    })
                                                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger small" })
                                                </div>
                                            </div>

                                            <div class="form-group row mb-4">
                                                <div class="offset-md-3 col-md-9">
                                                    <div class="form-check" style="padding-left: 0;">
                                                        <label class="form-check-label" style="display: flex; align-items: center; cursor: pointer;">
                                                            @Html.CheckBoxFor(m => m.RememberMe, new { @class = "form-check-input", @style = "margin-right: 10px; transform: scale(1.2);" })
                                                            <span style="font-weight: 500; color: #2c3e50;">Recordarme</span>
                                                        </label>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="form-group row mb-4">
                                                <div class="col-md-12 text-center">
                                                    <input type="submit" value="Iniciar Sesión" class="btn btn-lg"
                                                           style="background-color: #e67e22; color: white; border: none; border-radius: 25px; padding: 12px 40px; font-weight: bold; transition: all 0.3s ease; box-shadow: 0 4px 15px rgba(230, 126, 34, 0.3); margin-bottom: 20px;"
                                                           onmouseover="this.style.backgroundColor='#d35400'; this.style.transform='translateY(-2px)'; this.style.boxShadow='0 6px 20px rgba(230, 126, 34, 0.4)'"
                                                           onmouseout="this.style.backgroundColor='#e67e22'; this.style.transform='translateY(0)'; this.style.boxShadow='0 4px 15px rgba(230, 126, 34, 0.3)'" />
                                                </div>
                                            </div>

                                            <div class="text-center">
                                                <p>
                                                    <a href="@Url.Action("Register", "Account")" style="color: #e67e22; font-weight: bold; text-decoration: none;">
                                                        <i class="fas fa-user-plus"></i> Registrarse como nuevo usuario
                                                    </a>
                                                </p>
                                             
                                            </div>
                                        }
                                    </section>
                                </div>
                            </div>
                        </div>
                    </main>
                </div>
            </div>
        </div>
    </section>

    <!-- Sección de beneficios -->
    <section id="benefits" style="padding: 60px 0; background-color: #2c3e50; color: white;">
        <div class="container">
            <div class="row">
                <div class="col-md-4 text-center mb-4">
                    <div class="wow fadeInUp" data-wow-duration="300ms" data-wow-delay="300ms">
                        <i class="fas fa-mobile-alt" style="font-size: 3rem; color: #e67e22; margin-bottom: 20px;"></i>
                        <h4>Acceso Móvil</h4>
                        <p>Inicia sesión desde cualquier dispositivo, en cualquier momento</p>
                    </div>
                </div>
                <div class="col-md-4 text-center mb-4">
                    <div class="wow fadeInUp" data-wow-duration="300ms" data-wow-delay="400ms">
                        <i class="fas fa-history" style="font-size: 3rem; color: #e67e22; margin-bottom: 20px;"></i>
                        <h4>Historial de comidas</h4>
                        <p>Revisa tus comidas anteriores</p>
                    </div>
                </div>
                <div class="col-md-4 text-center mb-4">
                    <div class="wow fadeInUp" data-wow-duration="300ms" data-wow-delay="500ms">
                        <i class="fas fa-star" style="font-size: 3rem; color: #e67e22; margin-bottom: 20px;"></i>
                        <h4>Calidad de servicio</h4>
                        <p>Siempre te atenderan con un buen servicio</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/wow/1.1.2/wow.min.js"></script>
    <script>
        new WOW().init();
    </script>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
</body>

</html>