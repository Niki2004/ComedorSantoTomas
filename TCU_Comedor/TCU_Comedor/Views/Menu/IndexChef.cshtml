@model IEnumerable<TCU_Comedor.Models.Menu>

<!DOCTYPE html>
<html class="no-js">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Comedor Institucional</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">

    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/css/main.css" rel="stylesheet" />
    <link href="~/css/responsive.css" rel="stylesheet" />
    <link href="~/css/Menu.css" rel="stylesheet" />

</head>

<body>

    <section id="hero-area">
        <img class="img-responsive" src="~/Imagen/header.jpg" alt="" />
    </section>

    <nav id="navigation">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="block">
                        <nav class="navbar navbar-default">
                            <div class="container-fluid">
                                <div class="navbar-header">
                                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse"
                                            data-target="#bs-example-navbar-collapse-1">
                                        <span class="sr-only">Toggle navigation</span>
                                        <span class="icon-bar"></span>
                                        <span class="icon-bar"></span>
                                        <span class="icon-bar"></span>
                                    </button>
                                </div>

                                <nav class="navbar navbar-expand-lg">
                                    <div class="collapse navbar-collapse" id="navbarNav">
                                        <ul class="navbar-nav ms-auto">
                                            <li class="nav-item">
                                                <a class="nav-link" href="@Url.Action("IndChef", "RolesPropuestos")">Inicio</a>
                                            </li>
                                            <li class="nav-item">
                                                <a class="nav-link" href="@Url.Action("PedidosHoy", "Cocineras")">Pedidos del Día</a>
                                            </li>
                                            <li class="nav-item">
                                                <a class="nav-link" href="@Url.Action("Inventario", "Cocineras")">Ingredientes</a>
                                            </li>
                                            <li class="nav-item">
                                                <a class="nav-link" href="@Url.Action("Recetas", "Cocineras")">Recetas</a>
                                            </li>
                                            <li class="nav-item">
                                                <a class="nav-link" href="@Url.Action("Perfil", "Cocineras")">Perfil</a>
                                            </li>
                                            <li class="nav-item">
                                                <a class="nav-link" href='@Url.Action("Index", "Ajustes")'><i class="fas fa-cog"></i></a>
                                            </li>
                                        </ul>
                                    </div>
                                </nav>
                            </div>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </nav>

    <section id="price">
        <div class="container">
            <h1 class="heading">
                Gestión de <span>MENÚS</span> por el <span>CHEF</span>
            </h1>

            <div class="row mb-3">
                <div class="col-md-12 text-right">
                    <a class="btn btn-success" href="@Url.Action("Crear", "Menu")">
                        <i class="fas fa-plus"></i> Crear nuevo menú
                    </a>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <div class="block">
                        
                        <div class="schedule-table">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>Horario</th>
                                        <th>Lunes</th>
                                        <th>Martes</th>
                                        <th>Miércoles</th>
                                        <th>Jueves</th>
                                        <th>Viernes</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <!-- Desayuno -->
                                    <tr>
                                        <td class="time-slot">7:00 - 8:30 AM<br><small>Desayuno</small></td>
                                        @for (int dia = 1; dia <= 5; dia++)
                                        {
                                            var comida = Model.FirstOrDefault(m =>
                                            m.CategoriaMenu.Descripcion == "Desayuno"
                                            && (int)m.FechaMenu.DayOfWeek == dia);

                                            <td class="meal-item breakfast">
                                                @if (comida != null)
                                                {
                                                    <div class="meal-title">@comida.NombreComida</div>
                                                    <div class="meal-description">(@comida.CategoriaMenu.Descripcion)</div>
                                                }
                                                else
                                                {
                                                    <div class="meal-title">—</div>
                                                }
                                            </td>
                                        }
                                    </tr>

                                    <!-- Merienda Mañana -->
                                    <tr>
                                        <td class="time-slot">9:30 - 10:00 AM<br><small>Merienda</small></td>
                                        @for (int dia = 1; dia <= 5; dia++)
                                        {
                                            var comida = Model.FirstOrDefault(m =>
                                                m.CategoriaMenu.Descripcion == "Merienda"
                                                && (int)m.FechaMenu.DayOfWeek == dia);

                                            <td class="meal-item snack1">
                                                @if (comida != null)
                                                {
                                                    <div class="meal-title">@comida.NombreComida</div>
                                                    <div class="meal-description">(@comida.CategoriaMenu.Descripcion)</div>
                                                }
                                                else
                                                {
                                                    <div class="meal-title">—</div>
                                                }
                                            </td>
                                        }
                                    </tr>

                                    <!-- Almuerzo -->
                                    <tr>
                                        <td class="time-slot">12:00 - 2:00 PM<br><small>Almuerzo</small></td>
                                        @for (int dia = 1; dia <= 5; dia++)
                                        {
                                            var comida = Model.FirstOrDefault(m =>
                                                m.CategoriaMenu.Descripcion == "Almuerzo"
                                                && (int)m.FechaMenu.DayOfWeek == dia);

                                            <td class="meal-item lunch">
                                                @if (comida != null)
                                                {
                                                    <div class="meal-title">@comida.NombreComida</div>
                                                    <div class="meal-description">(@comida.CategoriaMenu.Descripcion)</div>
                                                }
                                                else
                                                {
                                                    <div class="meal-title">—</div>
                                                }
                                            </td>
                                        }
                                    </tr>


                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section id="about-us">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="block">
                        <img class="wow fadeInUp" data-wow-duration="300ms" data-wow-delay="400ms" src="~/Imagen/cooker-img.png"
                             alt="cooker-img">
                        <h1 class="heading wow fadeInUp" data-wow-duration="400ms" data-wow-delay="500ms">
                            Nuestro
                            <span>Comedor</span> </br>tiene la mejor calidad en las <span>Comidas</span>
                        </h1>
                        <p class="wow fadeInUp" data-wow-duration="300ms" data-wow-delay="600ms">
                            En el Comedor Escolar de la Escuela Santo Tomás, cada plato servido es mucho más que alimento: es cuidado, amor y esperanza.</br>
                            Es un espacio donde los niños y niñas encuentran no solo nutrición, sino también alegría, amistad y el calor de una gran
                            familia. </br> Cada sonrisa compartida en la mesa nos recuerda que aquí se siembra futuro, porque un corazón lleno y una mente
                            nutrida son la base </br> para soñar y aprender.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </section>


</body>

</html>