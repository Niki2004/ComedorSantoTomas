@using Microsoft.AspNet.Identity

<!DOCTYPE html>
<html class="no-js">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Reportes - Comedor Institucional</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">

    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/css/main.css" rel="stylesheet" />
    <link href="~/css/responsive.css" rel="stylesheet" />
    <link href="~/css/IndexAdm.css" rel="stylesheet" />

</head>

<body>

    <section id="hero-area">
        <img class="img-responsive" src="~/Imagen/header.jpg" alt="" />
    </section>

    <nav id="navigation">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="block">
                        <nav class="navbar navbar-default">
                            <div class="container-fluid">
                                <div class="navbar-header">
                                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse"
                                            data-target="#bs-example-navbar-collapse-1">
                                        <span class="sr-only">Toggle navigation</span>
                                        <span class="icon-bar"></span>
                                        <span class="icon-bar"></span>
                                        <span class="icon-bar"></span>
                                    </button>
                                </div>

                                <nav class="navbar navbar-expand-lg">
                                    <div class="collapse navbar-collapse" id="navbarNav">
                                        <ul class="navbar-nav ms-auto">
                                            <li class="nav-item">
                                                <a class="nav-link" href="@Url.Action("IndexADM", "Menu")">Inicio</a> @*Listo*@
                                            </li>
                                            <li class="nav-item">
                                                <a class="nav-link" href="@Url.Action("IndexADM", "Menu")">Gestión Menú</a> @*Listo*@
                                            </li>
                                            <li class="nav-item">
                                                <a class="nav-link" href="@Url.Action("IndexUsuarios", "Usuarios")">Usuarios</a> @*Listo*@
                                            </li>
                                            <li class="nav-item">
                                                <a class="nav-link" href="@Url.Action("IndexConsultas", "Usuarios")">Consultas</a>  @*Listo*@
                                            </li>
                                            <li class="nav-item">
                                                <a class="nav-link" href="@Url.Action("Index", "Reportes")">Reportes</a>
                                            </li>
                                            <li class="nav-item">
                                                <a class="nav-link" href="@Url.Action("Inventario", "Admin")">Proveedor</a>
                                            </li>
                                            <li class="nav-item">
                                                <a class="nav-link" href="@Url.Action("Perfil", "Admin")">Perfil</a>
                                            </li>
                                            <li class="nav-item">
                                                <a class="nav-link" href='@Url.Action("Index", "Ajustes")'><i class="fas fa-cog"></i></a> @*Listo*@
                                            </li>
                                        </ul>
                                    </div>
                                </nav>
                            </div>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </nav>

    <section id="slider">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="block wow fadeInUp" data-wow-duration="500ms" data-wow-delay="300ms">
                        <div class="title">
                            <h3>Centro de <span>Reportes</span></h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section id="about-us">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="block">
                        <img class="wow fadeInUp" data-wow-duration="300ms" data-wow-delay="400ms" src="~/Imagen/cooker-img.png"
                             alt="cooker-img">
                        <h1 class="heading wow fadeInUp" data-wow-duration="400ms" data-wow-delay="500ms">
                            Genera
                            <span>Reportes</span> </br>de manera <span>Profesional</span>
                        </h1>
                        <p class="wow fadeInUp" data-wow-duration="300ms" data-wow-delay="600ms">
                            Accede a reportes detallados de todos los aspectos del comedor institucional. Genera informes</br>
                            en PDF de usuarios, menús, información nutricional y proveedores para análisis, auditorías</br>
                            y toma de decisiones estratégicas. Toda la información organizada y lista para descargar.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section id="blog">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="block">
                        <h1 class="heading">Tipos de <span>Reportes</span> Disponibles</h1>
                        <ul>
                            <li class="wow fadeInLeft" data-wow-duration="300ms" data-wow-delay="300ms">
                                <div class="blog-img">
                                    <i class="fas fa-users fa-3x" style="color: #3498db;"></i>
                                </div>
                                <div class="content-right">
                                    <h3>Reporte de Usuarios</h3>
                                    <p>
                                        Listado completo de todos los usuarios registrados en el sistema del comedor,
                                        incluyendo información personal, roles y fechas de registro.
                                    </p>
                                    <div style="margin-top: 15px;">
                                        @Html.ActionLink("Generar PDF", "ReporteUsuarios", new { formato = "pdf" }, new
                                        {
                                            @class = "nav-link",
                                            @style = "background-color: #e74c3c; color: white; padding: 10px 20px; border-radius: 25px; text-decoration: none; display: inline-block; font-weight: bold;"
                                        })
                                    </div>
                                </div>
                            </li>

                            <li class="wow fadeInLeft" data-wow-duration="300ms" data-wow-delay="400ms">
                                <div class="content-left">
                                    <h3>Reporte de Menús</h3>
                                    <p>
                                        Detalle de todos los menús registrados por categoría (desayuno, almuerzo, merienda),
                                        incluyendo fechas y análisis de frecuencia de comidas.
                                    </p>
                                    <div style="margin-top: 15px;">
                                        @Html.ActionLink("Generar PDF", "ReporteMenus", new { formato = "pdf" }, new
                                        {
                                            @class = "nav-link",
                                            @style = "background-color: #f39c12; color: white; padding: 10px 20px; border-radius: 25px; text-decoration: none; display: inline-block; font-weight: bold;"
                                        })
                                    </div>
                                </div>
                                <div class="blog-img-2">
                                    <i class="fas fa-utensils fa-3x" style="color: #f39c12;"></i>
                                </div>
                            </li>

                            <li class="wow fadeInLeft" data-wow-duration="300ms" data-wow-delay="500ms">
                                <div class="blog-img">
                                    <i class="fas fa-heartbeat fa-3x" style="color: #27ae60;"></i>
                                </div>
                                <div class="content-right">
                                    <h3>Reporte Nutricional</h3>
                                    <p>
                                        Información nutricional detallada de los usuarios, incluyendo observaciones,
                                        restricciones alimentarias y seguimiento personalizado.
                                    </p>
                                    <div style="margin-top: 15px;">
                                        @Html.ActionLink("Generar PDF", "ReporteNutricion", new { formato = "pdf" }, new
                                        {
                                            @class = "nav-link",
                                            @style = "background-color: #27ae60; color: white; padding: 10px 20px; border-radius: 25px; text-decoration: none; display: inline-block; font-weight: bold;"
                                        })
                                    </div>
                                </div>
                            </li>

                            <li class="wow fadeInLeft" data-wow-duration="300ms" data-wow-delay="600ms">
                                <div class="content-left">
                                    <h3>Reporte de Proveedores</h3>
                                    <p>
                                        Directorio completo de proveedores por categoría, incluyendo información de contacto,
                                        costos y análisis de relaciones comerciales.
                                    </p>
                                    <div style="margin-top: 15px;">
                                        @Html.ActionLink("Generar PDF", "ReporteProveedores", new { formato = "pdf" }, new
                                        {
                                            @class = "nav-link",
                                            @style = "background-color: #9b59b6; color: white; padding: 10px 20px; border-radius: 25px; text-decoration: none; display: inline-block; font-weight: bold;"
                                        })
                                    </div>
                                </div>
                                <div class="blog-img-2">
                                    <i class="fas fa-truck fa-3x" style="color: #9b59b6;"></i>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section id="price">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="block">
                        <h1 class="heading wow fadeInUp" data-wow-duration="300ms" data-wow-delay="300ms">
                            Reportes
                            <span>CONSOLIDADOS</span> y <span>ESPECIALES</span>
                        </h1>
                        <p class="wow fadeInUp" data-wow-duration="300ms" data-wow-delay="400ms">
                            Genera reportes combinados y análisis especializados para una visión integral del comedor.
                            Perfectos para presentaciones ejecutivas y análisis de tendencias.
                        </p>
                        <div class="pricing-list">
                            <div class="title">
                                <h3>Reportes <span>Avanzados</span></h3>
                            </div>
                            <ul>
                                <li class="wow fadeInUp" data-wow-duration="300ms" data-wow-delay="300ms">
                                    <div class="item">
                                        <div class="item-title">
                                            <h2>Reporte General del Sistema</h2>
                                            <div class="border-bottom"></div>
                                            <span><i class="fas fa-chart-bar text-primary"></i></span>
                                        </div>
                                        <p>
                                            Reporte consolidado que incluye estadísticas generales de usuarios, menús más populares,
                                            resumen nutricional y análisis de proveedores en un solo documento.
                                        </p>
                                        <div style="margin-top: 15px; text-align: center;">
                                            @Html.ActionLink("Descargar Reporte General", "ReporteGeneral", new { formato = "pdf" }, new
                                            {
                                                @class = "nav-link",
                                                @style = "background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; padding: 12px 30px; border-radius: 25px; text-decoration: none; display: inline-block; font-weight: bold; box-shadow: 0 4px 12px rgba(102, 126, 234, 0.3);"
                                            })
                                        </div>
                                    </div>
                                </li>

                                <li class="wow fadeInUp" data-wow-duration="300ms" data-wow-delay="400ms">
                                    <div class="item">
                                        <div class="item-title">
                                            <h2>Análisis de Tendencias Mensuales</h2>
                                            <div class="border-bottom"></div>
                                            <span><i class="fas fa-calendar-alt text-warning"></i></span>
                                        </div>
                                        <p>
                                            Reporte especializado con gráficos y análisis de tendencias de consumo,
                                            preferencias alimentarias y patrones de uso del comedor por mes.
                                        </p>
                                        <div style="margin-top: 15px; text-align: center;">
                                            @Html.ActionLink("Generar Análisis", "ReporteTendencias", new { formato = "pdf" }, new
                                            {
                                                @class = "nav-link",
                                                @style = "background: linear-gradient(135deg, #ffecd2 0%, #fcb69f 100%); color: #8b4513; padding: 12px 30px; border-radius: 25px; text-decoration: none; display: inline-block; font-weight: bold; box-shadow: 0 4px 12px rgba(252, 182, 159, 0.3);"
                                            })
                                        </div>
                                    </div>
                                </li>

                                <li class="wow fadeInUp" data-wow-duration="300ms" data-wow-delay="500ms">
                                    <div class="item">
                                        <div class="item-title">
                                            <h2>Reporte de Costos y Presupuesto</h2>
                                            <div class="border-bottom"></div>
                                            <span><i class="fas fa-dollar-sign text-success"></i></span>
                                        </div>
                                        <p>
                                            Análisis financiero detallado incluyendo costos de proveedores, proyecciones presupuestarias
                                            y recomendaciones para optimización de recursos del comedor.
                                        </p>
                                        <div style="margin-top: 15px; text-align: center;">
                                            @Html.ActionLink("Ver Reporte Financiero", "ReporteCostos", new { formato = "pdf" }, new
                                            {
                                                @class = "nav-link",
                                                @style = "background: linear-gradient(135deg, #a8edea 0%, #fed6e3 100%); color: #2c3e50; padding: 12px 30px; border-radius: 25px; text-decoration: none; display: inline-block; font-weight: bold; box-shadow: 0 4px 12px rgba(168, 237, 234, 0.3);"
                                            })
                                        </div>
                                    </div>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <script src="~/css/comedorSettings.js"></script>
</body>

</html>